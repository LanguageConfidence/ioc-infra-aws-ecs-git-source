{
	"name": "Infra-Refine",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { 
			"VARIANT": "16"
		}
	},

	"postCreateCommand": "npm i -g aws-cdk && yarn install",
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"GitHub.copilot"
			]
		}
	},
	"remoteUser": "node",
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {
            "version": "latest"
		},
		"aws-cli": "latest"
	}
}